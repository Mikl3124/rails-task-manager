<h1>My Tasks</h1>

<p class="add_a_task"><%= link_to new_path , method: :get do %><i class="fas fa-plus"></i><% end %></p>
<ul class="list-group list-group-flush">
  <% @tasks.each do |task| %>
    <li class="list-group-item">
      <% if  task.completed == true %>
        <h4> <i class="far fa-check-square"></i> <%= link_to task.title, task_path(task)%> </h4>
        <%= link_to task_path(task), method: :delete, data:{ confirm: "Delete this task?"} do %><i class="fas fa-trash-alt"></i> <% end %>
      <% else %>
       <h4> <i class="far fa-check-square"></i> <%= link_to task.title, task_path(task)%> <%= link_to task_path(task), method: :delete, data:{ confirm: "Delete this task?"} do %><i class="fas fa-trash-alt"></i> <% end %> </h4>

    </li>
      <% end %>

  <% end %>
</ul>
